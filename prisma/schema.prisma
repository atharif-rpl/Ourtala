// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
model Donation {
  id            Int      @id @default(autoincrement())
  title         String
  description   String   // Ini deskripsi singkat (untuk kartu depan)
  longDescription String? // <--- TAMBAHAN: Deskripsi panjang (untuk modal)
  targetAmount  Float
  currentAmount Float    @default(0)
  imageUrl      String?
  location      String?
  whatsappLink  String?
  donationLink  String?  // <--- TAMBAHAN: Link Google Form/Saweria
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  name        String?
  role        String   @default("STAFF") // "SUPER_ADMIN" atau "STAFF"
  
  // Ini kolom sakti untuk menyimpan izin spesifik
  // Contoh isi: ["create", "update"] artinya cuma bisa tambah & edit
  permissions String[] 
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}